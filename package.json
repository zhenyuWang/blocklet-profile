{
  "name": "blocklet-profile",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "blocklet dev",
    "start": "nodemon -w api api/index.js",
    "lint": "next lint",
    "lint:fix": "npm run lint -- --fix",
    "clean": "node scripts/build-clean.js",
    "bundle": "npm run bundle:client && npm run bundle:api",
    "bundle:client": "PUBLIC_URL='/.blocklet/proxy/z2qa7m1xAcvNFi7TeBabojCf3xfzHkMiiQssC' next build",
    "bundle:api": "npm run clean && blocklet bundle --zip --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle --app-id zNKiTx46mr8M1RJqEHprn7MWY8ruoFKiUJMY",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "prepare": "husky install",
    "bump-version": "zx --quiet scripts/bump-version.mjs",
    "test:unit": "jest",
    "test:unit:w": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:w": "cypress open",
    "test:e2e:ci": "start-server-and-test dev http://localhost:8092 test:e2e"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm exec lint-staged",
      "commit-msg": "node scripts/verifyCommit.js"
    }
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.18.89",
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.16.15",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.19",
    "@mui/styled-engine-sc": "6.0.0-alpha.7",
    "@mui/x-date-pickers": "^6.18.3",
    "@ocap/client": "^1.18.89",
    "@ocap/mcrypto": "^1.18.89",
    "@ocap/wallet": "^1.18.89",
    "dayjs": "^1.11.10",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "i18next": "^23.7.7",
    "next": "14.0.3",
    "next-i18next": "^15.0.0",
    "react": "18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "18.2.0",
    "react-dom-confetti": "^0.2.0",
    "react-hook-form": "^7.48.2",
    "react-i18next": "^13.5.0",
    "styled-components": "^6.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "bumpp": "^8.2.1",
    "eslint": "^8",
    "eslint-config-next": "13.5.4",
    "eslint-plugin-prettier": "^5.0.1",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "cypress": "^13.6.0",
    "cypress-image-snapshot": "^4.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "lint-staged": "^12.5.0",
    "picocolors": "^1.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "zx": "^7.2.3"
  }
}
